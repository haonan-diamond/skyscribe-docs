{
  "openapi": "3.1.0",
  "info": {
    "title": "Transcription API",
    "version": "1.0.0",
    "description": "Submit audio files or URLs for transcription and receive outputs in markdown, pdf, json, or summary formats."
  },
  "servers": [
    { "url": "https://api.yourdomain.com" }
  ],
  "security": [
    { "bearerAuth": [] }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "CreateTranscriptionRequestJson": {
        "type": "object",
        "required": ["formats"],
        "properties": {
          "audio_url": { "type": "string", "format": "uri" },
          "language": { "type": "string", "example": "en-US" },
          "formats": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["markdown", "pdf", "json", "summary"]
            }
          },
          "webhook_url": { "type": "string", "format": "uri" },
          "callback_secret": { "type": "string" }
        }
      },
      "CreateTranscriptionResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "example": "tr_01JDX2V3YQ8C6A3V0K1W8E" },
          "status": {
            "type": "string",
            "enum": ["queued", "processing", "completed", "failed"]
          },
          "language": { "type": "string", "example": "en-US" },
          "requested_formats": {
            "type": "array",
            "items": { "type": "string" }
          },
          "created_at": { "type": "string", "format": "date-time" },
          "expires_at": { "type": "string", "format": "date-time" },
          "poll_url": { "type": "string", "example": "/v1/transcriptions/tr_123/status" },
          "download_base": { "type": "string", "example": "/v1/transcriptions/tr_123/download" },
          "results": {
            "type": "object",
            "properties": {
              "json": { "type": "object" },
              "markdown": { "type": "string" },
              "summary": { "type": "string" }
            }
          },
          "download_urls": {
            "type": "object",
            "additionalProperties": { "type": "string", "format": "uri" }
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "object",
            "properties": {
              "type": { "type": "string" },
              "code": { "type": "string" },
              "message": { "type": "string" }
            }
          }
        }
      }
    }
  },
  "paths": {
    "/v1/transcriptions": {
      "post": {
        "summary": "Create a transcription job (file or URL)",
        "description": "Accepts either an uploaded file (multipart/form-data) or a remote audio URL (application/json).",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CreateTranscriptionRequestJson" }
            },
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["file", "formats"],
                "properties": {
                  "file": { "type": "string", "format": "binary" },
                  "language": { "type": "string" },
                  "formats": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "enum": ["markdown", "pdf", "json", "summary"]
                    }
                  },
                  "webhook_url": { "type": "string", "format": "uri" },
                  "callback_secret": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Transcription completed (synchronous)",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/CreateTranscriptionResponse" }
              }
            }
          },
          "202": {
            "description": "Transcription accepted for processing (asynchronous)",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/CreateTranscriptionResponse" }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/Error" } }
            }
          },
          "401": {
            "description": "Authentication error",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/Error" } }
            }
          }
        }
      }
    },
    "/v1/transcriptions/{id}/status": {
      "get": {
        "summary": "Check transcription job status",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Current job status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "status": {
                      "type": "string",
                      "enum": ["queued", "processing", "completed", "failed"]
                    },
                    "progress": { "type": "number", "minimum": 0, "maximum": 1 },
                    "error_message": { "type": "string", "nullable": true }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v1/transcriptions/{id}": {
      "get": {
        "summary": "Retrieve completed transcription results",
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "Results bundle",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/CreateTranscriptionResponse" }
              }
            }
          }
        }
      }
    },
    "/v1/transcriptions/{id}/download": {
      "get": {
        "summary": "Download a single transcription artifact",
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "string" } },
          {
            "in": "query",
            "name": "format",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["markdown", "pdf", "json", "summary"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Requested format delivered",
            "content": {
              "application/pdf": {},
              "text/markdown": {},
              "application/json": {},
              "text/plain": {}
            }
          },
          "404": {
            "description": "Job or format not found",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/Error" } }
            }
          }
        }
      }
    }
  }
}
